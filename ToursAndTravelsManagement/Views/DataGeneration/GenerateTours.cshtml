@{
    ViewData["Title"] = "Generate Tours";
}

<h2>Generate Tours</h2>

<form asp-action="GenerateTours" method="post">
    <div class="mb-3">
        <label for="numberOfTours" class="form-label">Number of Tours</label>
        <input type="number" class="form-control" id="numberOfTours" name="numberOfTours" required>
    </div>
    <button type="submit" class="btn btn-primary">Generate</button>
</form>
